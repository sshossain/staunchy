<li class="span4">
  <a href="<%= product_path(product) %>" class="product">
    <div class="thumbnail">
      <% if product.image_url.present? %>
        <%= image_tag(product.image_url) %>
      <% else %>
        <img src="http://placehold.it/348x232">
      <% end %>
      <div class="caption">
        <h3 style="color: <%= product.category.color %>"><%= product.name %></h3>
        <p><%= product.description %></p>
        <p>
          <span class="price">
            $<%= product.sale_price %>
          </span>
          <span class="discount">
            $<%= product.price %>
          </span>
        </p>
        <%# <p><a href="#" class="btn btn-primary">Action</a> <a href="#" class="btn">Action</a></p> %>
      </div>
    </div>
  </a>  
</li>